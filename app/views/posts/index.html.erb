<div class="main posts-index">
  <div class="container">
    <h1 class="form-heading">回答一覧</h1>
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <%= link_to("#{post.name}（#{post.created_at.strftime("%Y年%m月%d日")})","/posts/#{post.id}") %>
      </div>
    <% end %>
  </div>
</div>